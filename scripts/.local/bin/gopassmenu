#!/bin/sh

PW="$(gopass ls --flat | wmenu -l 10 -p 'Password: ' -f 'Liberation Mono 12px' | xargs -r gopass show -o)"
# [t]ype or copy
if [ "$1" = "-t" ] ; then
	wtype "${PW}"
else
	wl-copy -o "${PW}"
	( sleep 30 && wl-copy -c ) &
fi

